{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "document package",
            "type": "shell",
            "command": "R --silent --vanilla -e \"devtools::document()\"",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install package",
            "type": "shell",
            "command": "R --silent --vanilla -e \"devtools::install(dependencies=FALSE,quick=TRUE)\"",
            "problemMatcher": []
        },
        {
            "label": "document + install package",
            "dependsOrder": "sequence",
            "dependsOn": [
                "document package",
                "install package"
            ],
            "problemMatcher": []
        },
        {
            "label": "install package with vignettes",
            "type": "shell",
            "dependsOn": [
                "document package"
            ],
            "command": "R --silent --vanilla -e \"devtools::install(dependencies=FALSE,upgrade=FALSE,build_vignettes=TRUE,force=TRUE)\"",
            "problemMatcher": []
        },
        {
            "label": "build pkgdown meta",
            "type": "shell",
            "command": "R --silent --vanilla -e \"pkgdown::build_home();pkgdown::build_reference_index()\"",
            "problemMatcher": []
        },
        {
            "label": "build pkgdown site",
            "type": "shell",
            "command": "R --silent --vanilla -e \"pkgdown::build_site()\"",
            "problemMatcher": []
        },
        {
            "label": "R CMD build + check",
            "type": "shell",
            "command": ".\\R_CMD_build_check.cmd",
            "problemMatcher": []
        }
    ]
}